    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"
            ],
            "group": "test",
        },
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cargo test build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--no-run"
            ],
            "group": "build",
        }
    ]
}